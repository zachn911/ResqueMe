<script>

    ovrLayer.clearLayers();

    var i, marker;

    for (i = 1; i < 1000; i++) {
        var lt = $('#ovr-info' + i).data('lat');
        var lo = $('#ovr-info' + i).data('long');
        var time = $('#ovr-info' + i).data('time');
        var type = $('#ovr-info' + i).data('type');
        var make = $('#ovr-info' + i).data('make');
        var model = $('#ovr-info' + i).data('model');
        var vID = $('#ovr-info' + i).data('vehicle_id');

        if (lt === undefined) {
            i = 1000;
        } else {
            if (type == 'ambulance') {
                marker = L.marker([lt, lo], {icon: ambulanceIcon}, {riseOnHover: true});
            } else if (type == 'truck') {
                marker = L.marker([lt, lo], {icon: truckIcon}, {riseOnHover: true});
            } else if (type == 'boat') {
                marker = L.marker([lt, lo], {icon: boatIcon}, {riseOnHover: true});
            } else if (type == 'firefighter') {
                marker = L.marker([lt, lo], {icon: firefighterIcon}, {riseOnHover: true});
            } else if (type == 'police') {
                marker = L.marker([lt, lo], {icon: policeIcon}, {riseOnHover: true});
            } else if (type == 'helo') {
                marker = L.marker([lt, lo], {icon: heloIcon}, {riseOnHover: true});
            } else if (type == 'avalanche') {
                marker = L.marker([lt, lo], {icon: avalancheIcon}, {riseOnHover: true});
            } else if (type == 'fire') {
