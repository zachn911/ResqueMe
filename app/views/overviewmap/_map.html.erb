            } else if (type == 'earthquake') {
                marker = L.marker([lt, lo], {icon: earthquakeIcon}, {riseOnHover: true});
            } else if (type == 'flood') {
                marker = L.marker([lt, lo], {icon: floodIcon}, {riseOnHover: true});
            } else if (type == 'person') {
                marker = L.marker([lt, lo], {icon: personIcon}, {riseOnHover: true});
            } else if (type == 'sar') {
                marker = L.marker([lt, lo], {icon: sarIcon}, {riseOnHover: true});
            } else if (type == 'tornado') {
                marker = L.marker([lt, lo], {icon: tornadoIcon}, {riseOnHover: true});
            } else if (type == 'skull') {
                marker = L.marker([lt, lo], {icon: skullIcon}, {riseOnHover: true});
            } else if (type == 'treedown') {
                marker = L.marker([lt, lo], {icon: treedownIcon}, {riseOnHover: true});
            } else if (type == 'tsunami') {
                marker = L.marker([lt, lo], {icon: tsunamiIcon}, {riseOnHover: true});
            } else if (type == 'zombie') {
                marker = L.marker([lt, lo], {icon: zombieIcon}, {riseOnHover: true});
            } else {
                marker = L.marker([lt, lo], {icon: carIcon}, {riseOnHover: true});
            }
            marker.bindPopup('Make: ' + make + '<br>Model: ' + model + '<br>Loc: ' + lt + ', ' + lo + '<br>Last Update: ' + time);
            marker.addTo(ovrLayer);
        }//end else

    }//end for

    ovrLayer.addTo(mymap);

    //popup on map click
    var cliPopup = L.popup();
    function onMapClick(e) {
        cliPopup
            .setLatLng(e.latlng)
            .setContent('You clicked at ' + e.latlng.lat.toPrecision(6) + ', ' + e.latlng.lng.toPrecision(6))
            .openOn(mymap);
    }
    mymap.on('click', onMapClick);
</script>