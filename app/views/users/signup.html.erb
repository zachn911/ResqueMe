<% content_for :body_class, "login-page" %>

<% content_for :before_scripts do %>
  <link rel="stylesheet" href="../../plugins/iCheck/square/blue.css">
<% end %>

<div class="register-box">
  <div class="register-logo">
    <a href="/">Sign Up</a>
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">Register a new account</p>
    <form action="/" method="GET">
      <div class="form-group has-feedback">
        <input type="text" class="form-control" placeholder="Account name">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="text" class="form-control" placeholder="Organization">
        <span class="fa fa-users form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="email" class="form-control" placeholder="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Confirm password">
        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox"> I agree to the <a href="tos">terms</a>
            </label>
          </div>
        </div><!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div><!-- /.col -->
      </div>
    </form>

    <div class="login-box-footer text-center">
      <%= link_to "I already have an account", login_path, class: "text-center" %>
    </div>
  </div><!-- /.form-box -->
</div><!-- /.register-box -->


<% content_for :after_body do %>
  <script src="/plugins/jQuery/jQuery-2.1.4.min.js"></script>
  <script src="/plugins/bootstrap/js/bootstrap.min.js"></script>
  <script src="/plugins/iCheck/icheck.min.js"></script>
  <script src="/assets/pages/login.js"></script>
<% end %>
